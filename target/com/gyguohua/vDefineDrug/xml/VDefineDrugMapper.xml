<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gyguohua..mapper.VDefineDrugMapper">
	<resultMap type="com.gyguohua.model..VDefineDrug" id="vDefineDrugResultMap">
		<result property="id12" column="id12" />
		<result property="code12" column="code12" />
		<result property="code" column="code" />
		<result property="name" column="name" />
		<result property="id" column="id" />
		<result property="nameChn" column="name_chn" />
	</resultMap>
	
	<sql id="table_columns">
		id12,
		code12,
		code,
		name,
		id,
		name_chn
    </sql>
	<sql id="entity_properties">
		#{id12,jdbcType=CHAR},
		#{code12,jdbcType=VARCHAR},
		#{code,jdbcType=VARCHAR},
		#{name,jdbcType=VARCHAR},
		#{id,jdbcType=CHAR},
		#{nameChn,jdbcType=VARCHAR}
	</sql>
	<sql id="batch_entity_properties">
		#{item.id12,jdbcType=CHAR},
		#{item.code12,jdbcType=VARCHAR},
		#{item.code,jdbcType=VARCHAR},
		#{item.name,jdbcType=VARCHAR},
		#{item.id,jdbcType=CHAR},
		#{item.nameChn,jdbcType=VARCHAR}
	</sql>
	
	<sql id="table_columns_no_id">
		code12,
		code,
		name,
		id,
		name_chn
    </sql>
	<sql id="entity_properties_no_id">
		#{code12,jdbcType=VARCHAR},
		#{code,jdbcType=VARCHAR},
		#{name,jdbcType=VARCHAR},
		#{id,jdbcType=CHAR},
		#{nameChn,jdbcType=VARCHAR}
	</sql>
	<sql id="batch_entity_properties_no_id">
		#{item.code12,jdbcType=VARCHAR},
		#{item.code,jdbcType=VARCHAR},
		#{item.name,jdbcType=VARCHAR},
		#{item.id,jdbcType=CHAR},
		#{item.nameChn,jdbcType=VARCHAR}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="insert" parameterType="com.gyguohua.model..VDefineDrug" useGeneratedKeys="true" keyProperty="id">
		insert into v_define_drug( <include refid="table_columns_no_id" /> ) 
		values ( <include refid="entity_properties_no_id" /> )
	</insert>
	
	<!-- 批量添加 适用于主键自增类型  不支持返回主键-->
	<insert id="batchInsert" parameterType="java.util.List" useGeneratedKeys="true">
		insert into v_define_drug( <include refid="table_columns_no_id" /> ) 
		values 
		<foreach item="item" collection="list" separator="," >
			( <include refid="batch_entity_properties_no_id" /> )
		</foreach>
	</insert>
	
	<!--根据主键删除 -->
	<delete id="deleteById">
		delete from v_define_drug
		where id = #{id}
	</delete>
	
	<!-- 根据ID批量删除 -->
	<delete id="deleteByIds">
		delete from v_define_drug
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			'${item}'
		</foreach>
	</delete>
	
	<update id="update" parameterType="com.gyguohua.model..VDefineDrug">
		update v_define_drug 
		<trim prefix="set" suffixOverrides=",">
			<if test="code12 != null and code12 != ''">code12 = #{code12},</if>
			<if test="code != null and code != ''">code = #{code},</if>
			<if test="name != null and name != ''">name = #{name},</if>
			<if test="id != null and id != ''">id = #{id},</if>
			<if test="nameChn != null and nameChn != ''">name_chn = #{nameChn},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="vDefineDrugResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from v_define_drug
		where id = #{id}
	</select>
	
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="code12 != null and code12 != ''">and code12 = #{code12}</if>
			<if test="code != null and code != ''">and code = #{code}</if>
			<if test="name != null and name != ''">and name = #{name}</if>
			<if test="id != null and id != ''">and id = #{id}</if>
			<if test="nameChn != null and nameChn != ''">and name_chn = #{nameChn}</if>
		</trim>
	</sql>
	
	<select id="findAll" resultMap="vDefineDrugResultMap" parameterType="com.gyguohua.model..VDefineDrug">
		select <include refid="table_columns" />
		from v_define_drug
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>