<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gyguohua..mapper.VCategory3Mapper">
	<resultMap type="com.gyguohua.model..VCategory3" id="vCategory3ResultMap">
		<result property="name" column="name" />
		<result property="name2" column="name2" />
		<result property="name3" column="name3" />
		<result property="code6" column="code6" />
	</resultMap>
	
	<sql id="table_columns">
		name,
		name2,
		name3,
		code6
    </sql>
	<sql id="entity_properties">
		#{name,jdbcType=VARCHAR},
		#{name2,jdbcType=VARCHAR},
		#{name3,jdbcType=VARCHAR},
		#{code6,jdbcType=VARCHAR}
	</sql>
	<sql id="batch_entity_properties">
		#{item.name,jdbcType=VARCHAR},
		#{item.name2,jdbcType=VARCHAR},
		#{item.name3,jdbcType=VARCHAR},
		#{item.code6,jdbcType=VARCHAR}
	</sql>
	
	<sql id="table_columns_no_id">
		name2,
		name3,
		code6
    </sql>
	<sql id="entity_properties_no_id">
		#{name2,jdbcType=VARCHAR},
		#{name3,jdbcType=VARCHAR},
		#{code6,jdbcType=VARCHAR}
	</sql>
	<sql id="batch_entity_properties_no_id">
		#{item.name2,jdbcType=VARCHAR},
		#{item.name3,jdbcType=VARCHAR},
		#{item.code6,jdbcType=VARCHAR}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="insert" parameterType="com.gyguohua.model..VCategory3" useGeneratedKeys="true" keyProperty="id">
		insert into v_category_3( <include refid="table_columns_no_id" /> ) 
		values ( <include refid="entity_properties_no_id" /> )
	</insert>
	
	<!-- 批量添加 适用于主键自增类型  不支持返回主键-->
	<insert id="batchInsert" parameterType="java.util.List" useGeneratedKeys="true">
		insert into v_category_3( <include refid="table_columns_no_id" /> ) 
		values 
		<foreach item="item" collection="list" separator="," >
			( <include refid="batch_entity_properties_no_id" /> )
		</foreach>
	</insert>
	
	<!--根据主键删除 -->
	<delete id="deleteById">
		delete from v_category_3
		where id = #{id}
	</delete>
	
	<!-- 根据ID批量删除 -->
	<delete id="deleteByIds">
		delete from v_category_3
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			'${item}'
		</foreach>
	</delete>
	
	<update id="update" parameterType="com.gyguohua.model..VCategory3">
		update v_category_3 
		<trim prefix="set" suffixOverrides=",">
			<if test="name2 != null and name2 != ''">name2 = #{name2},</if>
			<if test="name3 != null and name3 != ''">name3 = #{name3},</if>
			<if test="code6 != null and code6 != ''">code6 = #{code6},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="vCategory3ResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from v_category_3
		where id = #{id}
	</select>
	
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="name2 != null and name2 != ''">and name2 = #{name2}</if>
			<if test="name3 != null and name3 != ''">and name3 = #{name3}</if>
			<if test="code6 != null and code6 != ''">and code6 = #{code6}</if>
		</trim>
	</sql>
	
	<select id="findAll" resultMap="vCategory3ResultMap" parameterType="com.gyguohua.model..VCategory3">
		select <include refid="table_columns" />
		from v_category_3
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>